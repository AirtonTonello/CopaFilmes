<form id="form1" method="get">
    <div class="row" style="">
        <div class="col-md-12">
            <label class="fonte-primaria">Selecionados<br /><span id="count">0</span> de 8 filmes</label>
            <button style="float: right; height: 50px; border-radius: 0; font-size: 10px; color: white; background-color: black;" class="btn btn-default" type="button" onclick="atualizaView()">GERAR MEU CAMPEONATO</button>
        </div>
    </div>
    <br />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="panel panel-default" style="height: 100px;">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-1">
                                <input id="@item.Id" type="checkbox" class="tamanho" name="FilmesSelecionados" value="@string.Concat(item.Titulo, "-", item.Nota)" onchange="contador(this.id)" />
                            </div>
                            <div class="col-md-10" style="line-height: 14px;">
                                <label for="@item.Id">@item.Titulo</label>
                                <br />
                                <label style="font-size: 12px; color: grey;" for="@item.Id">@item.Ano</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
